<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
            android:src="@mipmap/ic_launcher"
            android:layout_width="205dp"
            android:layout_height="206dp"
            android:id="@+id/imageHero" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="40dp"
            android:layout_marginLeft="100dp" android:layout_marginStart="100dp"/>
    <TextView
            android:text="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textName"
            app:layout_constraintStart_toStartOf="@+id/imageHero" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/imageHero"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textPower"
            app:layout_constraintStart_toStartOf="@+id/textName" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textName" android:text="Power"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textGender"
            app:layout_constraintStart_toStartOf="@+id/textPower" android:layout_marginTop="13dp"
            app:layout_constraintTop_toBottomOf="@+id/textPower" android:text="Gender"/>
</android.support.constraint.ConstraintLayout>